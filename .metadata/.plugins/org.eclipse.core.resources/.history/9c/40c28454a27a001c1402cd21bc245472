/**
 * Conexión a la BD "prod".
 * 
 * Debido a la simplicidad del problema en el interior de dicha BD solo se encuentra la tabla "Productos".
 * Ahí se sitúan todos los productos donde, a su vez, he decidido de manera ejemplificativa que se almacene su id, nombre y precio.
 * NOTA: Dicha base de datos se ha creado mediante MySQL + MySQLWorkbench.
 *
 * */

package com.connection;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
 
public class Conexion {
	public static Connection conectar() {
		Connection con = null;
		
		String password = "root";
		String usuario = "root";
		String url = "jdbc:mysql://localhost:3306/prod?user=" + usuario
				+ "&password=" + password;
		try {
			con = DriverManager.getConnection(url);
			if (con != null) {
				System.out.println("Conectado");
			}
		} catch (SQLException e) {
			System.out.println("No se pudo conectar a la base de datos");
			e.printStackTrace();
		}
		return con;
	}
}
